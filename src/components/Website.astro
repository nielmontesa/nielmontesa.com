---
const { post } = Astro.props;

const { alt, img, url } = post.frontmatter;
---

<div class="opacity-60 hover:opacity-100 transition-all">
  <a href={url} target="_blank">
    <img
      class="rounded border border-[var(--border-gray)] w-100"
      src={img}
      alt={alt}
      class="/"
    />
  </a>
</div>

<style>
  div {
    display: grid;
    grid-template-rows: 1fr auto;
    margin-bottom: 10px;
    break-inside: avoid;
  }
</style>
