<script>
  // Get the link
  var scrollToTopLink = document.getElementById("scrollToTopLink");

  // When the user scrolls down 20px from the top of the document, show the link
  window.onscroll = function () {
    scrollFunction();
  };

  function scrollFunction() {
    if (
      document.body.scrollTop > 20 ||
      document.documentElement.scrollTop > 20
    ) {
      scrollToTopLink.style.display = "block";
    } else {
      scrollToTopLink.style.display = "none";
    }
  }

  // When the link is clicked, scroll to the top of the document
  function scrollToTop() {
    document.body.scrollTop = 0; // For Safari
    document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
  }
</script>
